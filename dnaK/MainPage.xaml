        <AppBarButton x:Name="appBarButton2" HorizontalAlignment="Left" Icon="Download" Label="Save" Margin="1304,-4,0,0" VerticalAlignment="Top"/>
        <AppBarToggleButton x:Name="appBarToggleButton" HorizontalAlignment="Left" Icon="View" Label="Aminoacids" Margin="1372,-4,0,0" VerticalAlignment="Top" Checked="appBarToggleButton_Checked"/>

    </Grid>
