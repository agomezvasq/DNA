                    <ScrollViewer Margin="0,102,356,129.667">
                        <StackPanel Background="#7FE2E2E2" BorderBrush="Black" BorderThickness="0" RenderTransformOrigin="-2.191,0.564"/>
                    </ScrollViewer>
                </Grid>
            </PivotItem>
            <PivotItem Header="Match" Margin="0,0,0,-0.333">
                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="{x:Null}" Margin="0,0,0,35">
                        <StackPanel Height="850" Width="1440">
                            <StackPanel Height="20" VerticalAlignment="Top" Orientation="Horizontal" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                            <Canvas Height="130" Background="#7FFBCEB4" Margin="0,0,0.333,0">
                                <StackPanel HorizontalAlignment="Left" Height="130" VerticalAlignment="Center" Orientation="Horizontal" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                    <local:BP Height="130"/>
                                </StackPanel>
                            </Canvas>
                            <Canvas Height="130" Background="#7FE2E2E2">
                                <StackPanel HorizontalAlignment="Left" Height="130" VerticalAlignment="Center" Orientation="Horizontal" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled" Canvas.Left="243">
                                    <local:BP Height="130"/>
                                </StackPanel>
                            </Canvas>
                        </StackPanel>
                    </ScrollViewer>
                    <ScrollViewer Height="35" VerticalAlignment="Bottom" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Background="#7FEAEAEA">
                        <StackPanel Height="25" VerticalAlignment="Top" Orientation="Horizontal" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="1440">
                            <local:StringItemM Margin="0,0,2,0.333" Width="251" Max="True" DNASequence=""/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </PivotItem>
