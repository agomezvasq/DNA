                        <TextBlock x:Name="ATt" TextWrapping="Wrap" Text="total: 0.0" VerticalAlignment="Top" FontSize="26.667" Width="336" TextAlignment="Center" FontFamily="Segoe UI Light" Canvas.Top="234"/>
