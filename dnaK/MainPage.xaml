                                <StackPanel HorizontalAlignment="Left" Height="130" VerticalAlignment="Center" Orientation="Horizontal" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                    <local:BP Height="130"/>
                                    <local:BP Base="1" Height="130"/>
                                    <local:BP Base="2" Height="130"/>
                                    <local:BP Base="3" Height="130"/>
                                    <local:BP Height="130"/>
                                    <local:BP Base="2" Height="130"/>
                                </StackPanel>
                            </ScrollViewer>
                        </AppBarButton>
                    </AppBarButton>
                    <TextBlock x:Name="textBlock_Copy5" HorizontalAlignment="Right" Margin="0,276,10,0" TextWrapping="Wrap" Text="%GC" VerticalAlignment="Top" FontSize="48" Width="300" TextAlignment="Right"/>
                    <TextBlock x:Name="textBlock_Copy6" HorizontalAlignment="Right" Margin="0,340,10,0" TextWrapping="Wrap" Text="25.128" VerticalAlignment="Top" FontSize="26.667" Width="300" TextAlignment="Right" FontFamily="Segoe UI Light"/>
                    <TextBlock x:Name="textBlock_Copy7" HorizontalAlignment="Right" Margin="0,276,186,0" TextWrapping="Wrap" Text="Base pairs" VerticalAlignment="Top" FontSize="48" Width="300" TextAlignment="Center"/>
                    <TextBlock x:Name="textBlock_Copy8" HorizontalAlignment="Right" Margin="0,340,186,0" TextWrapping="Wrap" Text="1576" VerticalAlignment="Top" FontSize="26.667" Width="300" TextAlignment="Center" FontFamily="Segoe UI Light"/>
                    <TextBlock x:Name="textBlock_Copy9" HorizontalAlignment="Right" Margin="0,276,491,0" TextWrapping="Wrap" Text="Compression" VerticalAlignment="Top" FontSize="48" Width="300" TextAlignment="Center"/>
                    <TextBlock x:Name="textBlock_Copy10" HorizontalAlignment="Right" Margin="0,340,491,0" TextWrapping="Wrap" Text="1576" VerticalAlignment="Top" FontSize="26.667" Width="300" TextAlignment="Center" FontFamily="Segoe UI Light"/>
                </Grid>
