                    </ScrollViewer>
                    <TextBox x:Name="textBox" Margin="0,442,0,0" TextWrapping="Wrap" Text="" IsReadOnly="True" Background="#FFE4E4E4" BorderBrush="{x:Null}"/>
                    <AppBarButton x:Name="appBarButton1" HorizontalAlignment="Right" Icon="Copy" Label="Copy" Margin="0,130,151,0" VerticalAlignment="Top">
