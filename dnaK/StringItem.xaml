    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:dnaK"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="25.249" Width="1084" Margin="0,0,0,4" VerticalAlignment="Top">

    <Grid x:Name="g" Margin="0,0,0,0.333" Background="White" PointerEntered="g_PointerEntered" PointerExited="g_PointerExited">
        <TextBlock x:Name="text" Margin="2,2,70,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20"/>
