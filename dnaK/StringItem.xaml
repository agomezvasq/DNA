        <TextBlock x:Name="l" Margin="0,2,10,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" TextAlignment="Right"/>

    </Grid>
</UserControl>
